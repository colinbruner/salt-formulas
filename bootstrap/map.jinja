{%- import_yaml "bootstrap/defaults.yml" as default_settings %}

{%- set os_family_map = salt['grains.filter_by']({
    'Arch': {
        'default': ''
    },
    'Debian': {
        'default': ''
    },
    'RedHat': {
        'default': ''
    } 
}, grain='os_family', merge=salt['pillar.get']('bootstrap:lookup')) %}

{% do default_settings.bootstrap.update(os_family_map) %}

{% set bootstrap = salt['pillar.get'](
    'bootstrap', 
    default=default_settings['bootstrap'], 
    merge=True) 
%}
